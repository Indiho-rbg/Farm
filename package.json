bot.command('start', async (ctx) => {
  try {
    await ctx.telegram.sendMessage(
      ctx.chat.id,
      'Грати в гру', 
      {
        reply_markup: {
          inline_keyboard: [
            [
              {
                text: "Запустити гру",
                web_app: {
                  url: "https://farm-ochre-one.vercel.app/"
                }
              }
            ]
          ]
        }
      }
    );
  } catch (error) {
    console.error('Error sending message:', error);
  }
});

